; This is the Lifemapper CherryPy configuration file.
; See: http://docs.cherrypy.org/en/latest/config.html

[global]
log.error_file: '@LMSCRATCHDISK@/log/cherrypyErrors.log'
log.access_file: '@LMSCRATCHDISK@/log/cherrypyAccess.log'
response.timeout: 1000000
tools.CORS.on : True
tools.encode.encoding: 'utf-8'
tools.encode.on: True
tools.etags.autotags: True
tools.sessions.on: True
tools.sessions.storage_type: "file"
tools.sessions.storage_path: '@LMSCRATCHDISK@/sessions'
tools.sessions.timeout: 20160
tools.sessions.locking: 'implicit'
environment: 'embedded'

[/css]
tools.staticdir.on: True
tools.staticdir.dir: '@LMHOME@/LmWebServer/public_html/css'

[/clients]
tools.staticdir.on: True
tools.staticdir.dir: '@LMHOME@/LmWebServer/public_html/clients'

[/dl]
tools.staticdir.on: True
tools.staticdir.dir: '@LMHOME@/LmWebServer/public_html/dl'
tools.staticdir.content_types : {'gz' : 'application/x-gzip'}

[/favicon.ico]
tools.staticfile.on: True
tools.staticfile.filename: '@LMHOME@/LmWebServer/public_html/static/favicon.ico'

[/help]
tools.staticdir.on: True
tools.staticdir.dir: '@LMHOME@/LmWebServer/public_html/help'

[/images]
tools.staticdir.on: True
tools.staticdir.dir: '@LMHOME@/LmWebServer/public_html/images'

[/javascript]
tools.staticdir.on: True
tools.staticdir.dir: '@LMHOME@/LmWebServer/public_html/javascript'

[/robots.txt]
tools.staticfile.on: True
tools.staticfile.filename: '@LMHOME@/LmWebServer/public_html/static/robots.txt'

[/samples]
tools.staticdir.on: True
tools.staticdir.dir: '@LMHOME@/LmWebServer/public_html/samples'

[/schemas]
tools.staticdir.on: True
tools.staticdir.dir: '@LMHOME@/LmWebServer/public_html/schemas'
tools.staticdir.content_types: {'xsd' : 'application/xml', 'wadl': 'application/xml'}
